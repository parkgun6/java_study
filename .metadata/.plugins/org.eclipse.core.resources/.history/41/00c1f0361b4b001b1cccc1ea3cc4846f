package org.bmi.ui;

import java.util.Scanner;

import org.bmi.service.BMIService;

public class BMIUserInterface {

	Scanner scanner;
	BMIService service;//인스턴스 valuable
	
	
	public BMIUserInterface() {
		scanner = new Scanner(System.in);
		service = new BMIService();
		
	}
	private String inputStr(String msg) {
		String result = null;
		System.out.println();
		result = scanner.nextLine();
		return result;
	}
	
	
	public void input() {
		
		String name = this.inputStr("본인의 이름");
		
		double height = Double.parseDouble(inputStr("본인의 키"));
		
		double weight = Double.parseDouble(inputStr("본인의 몸무게"));
		
		System.out.println(name +" : "+ height +" : "+ weight);
		
	}
	
}
